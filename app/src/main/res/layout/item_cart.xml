<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:padding="12dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cart_item_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/cart_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="name"
        android:textColor="@color/color1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/cart_item_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>

    <TextView
        android:id="@+id/cart_item_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:text="price"
        android:textColor="@color/color1"
        app:layout_constraintLeft_toRightOf="@id/cart_item_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cart_item_name">

    </TextView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cart_item_min"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="12dp"
        android:text="-"
        android:textColor="@color/color1"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/cart_item_img"
        app:layout_constraintTop_toBottomOf="@id/cart_item_price">

    </com.google.android.material.button.MaterialButton>

    <TextView
        android:id="@+id/cart_item_count"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginVertical="12dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/color1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/cart_item_min"
        app:layout_constraintTop_toBottomOf="@id/cart_item_price">

    </TextView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cart_item_plus"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginVertical="12dp"
        android:text="+"
        android:textColor="@color/color1"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/cart_item_count"
        app:layout_constraintTop_toBottomOf="@id/cart_item_price">

    </com.google.android.material.button.MaterialButton>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cart_item_remove"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="12dp"
        android:text="X"
        android:textColor="@color/color1"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/cart_item_plus"
        app:layout_constraintTop_toBottomOf="@id/cart_item_price">

    </com.google.android.material.button.MaterialButton>


</androidx.constraintlayout.widget.ConstraintLayout>